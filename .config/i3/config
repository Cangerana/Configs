# shutdown / restart / suspend...
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (CTRL+s) shutdown

mode "$mode_system" {
    bindsym l exec --no-startup-id $i3lockwall, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $i3lockwall && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $i3lockwall && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Ctrl+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+BackSpace mode "$mode_system"

mode "$mode_scratchpad" {
    bindsym s [class="Spotify"] scratchpad show; move position center, mode "default"
    bindsym a [class="pavucontrol-qt"] scratchpad show; move position center, mode "default"
    bindsym e [title="ranger"] scratchpad show; move position center, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+o mode "$mode_scratchpad"

#bindsym $mod+s move scratchpad
#for_window [class="Spotify"], move scratchpad
for_window [class="pavucontrol-qt"], move scratchpad
for_window [title="ranger"], move scratchpad


bindsym $mod+e exec terminator -e "ranger" --title="ranger"

# Mode for open comum apps
set $mode_app System (f) Firefox | (l) Luakit | (e) Nautilus | (s) Spotify | (d) Discord | (a) Pavucontrol

mode "$mode_app" {
    bindsym f exec notify-send 'Starting Firefox'     ; exec firefox                            , mode "default"
    bindsym e exec notify-send 'Starting Nautilus'    ; exec nautilus                           , mode "default"
    bindsym s exec notify-send 'Starting Spotify'     ; exec flatpak run com.spotify.Client	    , mode "default"
    bindsym d exec notify-send 'Starting Discord'     ; exec flatpak run com.discordapp.Discord , mode "default"
    bindsym a exec notify-send 'Starting Pavucontrol' ; exec pavucontrol-qt                     , mode "default"
    bindsym c exec notify-send 'Starting Emacs'       ; exec emacsclient -c -a 'emacs'          , mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+n mode "$mode_app"

